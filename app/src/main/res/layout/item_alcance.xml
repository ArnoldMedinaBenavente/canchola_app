<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvNombreAlcance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del concepto completo..."
        android:textColor="#1C1C1E"
        android:textSize="15sp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreAlcance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tvIdConcept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:visibility="gone"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AVANCE ACTUAL"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#8E8E93"
            android:letterSpacing="0.05" />

        <EditText
            android:id="@+id/etCantidadAvance"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_edittext_minimal"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColor="#007AFF"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F7"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutRegistro"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>